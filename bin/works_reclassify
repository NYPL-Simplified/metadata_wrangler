#!/usr/bin/env python
"""Classify or reclassify works."""
import os
import sys
bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..", "..")
sys.path.append(os.path.abspath(package_dir))
from metadata.core.scripts import WorkReclassifierScript

args = list(sys.argv[1:])
force = False
if 'force' in args:
   force = True
   args.remove('force')
if args:
   restrict_to_source = args[0]
else:
   restrict_to_source = None

WorkReclassifierScript(force, restrict_to_source).run()
